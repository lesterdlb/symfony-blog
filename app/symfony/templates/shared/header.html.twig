<header class="p-3 bg-dark text-white">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                <img src="/img/logo.svg" class="bi me-2" height="32" role="img" aria-label="Bootstrap" alt="" />
            </a>

            {{ include('/shared/nav.html.twig') }}

            <div class="text-end">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="#" class="btn btn-outline-light me-2">Hello: {{ app.user.name }}</a>
                    <a href="{{ path('app_logout') }}" class="btn btn-outline-light me-2">Logout</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-outline-light me-2">Login</a>
                    <a href="{{ path('app_register') }}" class="btn btn-warning">Sign-up</a>
                {% endif %}
            </div>
        </div>
    </div>
</header>