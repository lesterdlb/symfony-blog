{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <div class="row mb-2 pt-4">
        <h1>Your Posts</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ post.date ? post.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            </tbody>
        </table>
        <hr/>
        <div class="col-4">
            {{ form_start(form) }}
            {{ form_label(form.newStatus, null, {'label_attr': {'class': 'form-label'}}) }}

            <div class="input-group mb-3">
                {{ form_widget(form.newStatus, {'attr': {'class': 'form-control'}}) }}
                {{ form_widget(form.send, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
        <hr/>
        <div>
            <a href="{{ path('app_dashboard') }}" class="btn btn-primary">back to list</a>

            <a href="{{ path('app_post_edit', {'id': post.id}) }}">edit</a>

            {{ include('post/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
